@model ManufactureHub.Models.SectionViewModel

@{
    ViewData["Title"] = "Видалення секції";
}

<div class="container-fluid h-100 d-flex align-items-center justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <h5 class="card-title">Ви впевнені що хочіте <a class="pe-none text-danger" tabindex="-1">видалити</a> секцію @Model.Name? Разом з секцією видаляться <a class="pe-none text-danger" tabindex="-1">таски</a></h5>
            <form asp-action="Delete" id="delete-user" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Видалити" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>
