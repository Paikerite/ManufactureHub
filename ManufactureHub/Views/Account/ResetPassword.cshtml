@model ResetPasswordModel
@{
    ViewData["Title"] = "Скидання паролю";
}

<h1 style="color:#fff4e4">@ViewData["Title"]</h1>

<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="card shadow-sm col-md-5 col-lg-6">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-4">
                        <form asp-action="ResetPasswordPost" method="post">
                            <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                            <input asp-for="Code" type="hidden" />
                            <div class="mb-3">
                                <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                                <label asp-for="Email" class="form-label">Пошта</label>
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="Password" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please enter your password." />
                                <label asp-for="Password" class="form-label">Новий пароль</label>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input asp-for="ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" placeholder="Please confirm your password." />
                                <label asp-for="ConfirmPassword" class="form-label">Підтвердіть новий пароль</label>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="mb-3">
                                <input type="submit" value="Зберегти" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
