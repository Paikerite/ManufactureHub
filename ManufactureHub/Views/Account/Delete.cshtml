@model ManufactureHub.Data.ApplicationUser
@{
    ViewData["Title"] = "Підтвердження видалення аккаунту";
}

<div class="container-fluid h-100 d-flex align-items-center justify-content-center">
    <div class="card text-center">
        <div class="card-header">
            @ViewData["Title"]
        </div>
        <div class="card-body">
            <h5 class="card-title">Ви впевнені що хочіте <a class="pe-none text-danger" tabindex="-1">видалити</a>акаунт @Model.Name @Model.SurName @Model.PatronymicName</h5>
            <form asp-action="DeleteConfirmed" id="delete-user" method="post">
                <div asp-validation-summary="All" class="text-danger" role="alert"></div>
                <input type="hidden" asp-for="Id" />
                <input type="submit" value="Видалити" class="btn btn-danger" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
